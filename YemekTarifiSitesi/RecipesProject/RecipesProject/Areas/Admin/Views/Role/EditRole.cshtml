@using DTOLayer.DTOs.RoleDTOs
@model UpdateRoleDTO
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rol Güncelleme Paneli:</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label for="exampleInputName1">Rol Adı:</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Rol Adını Giriniz...">
                </div>
                <button class="btn btn-primary me-2">Güncelle</button>
                <button class="btn btn-dark">İptal Et</button>
            </form>
        </div>
    </div>
</div>

