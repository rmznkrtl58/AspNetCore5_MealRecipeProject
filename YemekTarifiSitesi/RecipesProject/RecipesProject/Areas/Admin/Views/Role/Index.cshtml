@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int test = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Roller:</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı:</th>
                            <th>Sil</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            test += 1;

                            <tr>
                                <td>@test</td>
                                <td>@x.Name</td>
                                <td><a href="/Admin/Role/DeleteRole/@x.Id/" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/Role/EditRole/@x.Id/" class="btn btn-warning">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/Role/AddRole/" class="btn btn-success">Ekle</a>
    </div>
</div>


