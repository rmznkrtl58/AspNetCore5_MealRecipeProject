@using DTOLayer.DTOs.ContactUsDTOs
@model ListContactUsDTO
@{
    ViewData["Title"] = "ContactUsDetails";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İçerik:</h4>
            <p class="card-description"> Kullanıcı Yorumlarının Detaylarının Görüntülendiği Sayfadır. </p>
            <form class="forms-sample" >
                <div class="form-group">
                    <label for="exampleInputName1">Gönderen Ad Soyad:</label>
                    <input type="text" readonly asp-for="NameSurname" class="form-control" id="exampleInputName1" placeholder="Ana Başlığı Giriniz...">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Gönderen E-posta:</label>
                    @Html.TextAreaFor(x => x.Mail, new { @class = "form-control", @rows = 5, @readonly = "" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @rows = 5, @readonly = "" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama:</label>
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @rows = 5,@readonly="" })
                </div>
            </form>
        </div>
    </div>
</div>

