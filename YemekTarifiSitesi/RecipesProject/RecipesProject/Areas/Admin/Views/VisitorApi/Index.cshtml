@using DTOLayer.DTOs.VisitorApiDTOs
@model List<GetListVisitorDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
    int test = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ziyaretçiler (Api)</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ziyaretçi Adı Soyadı:</th>
                            <th>Ziyaretçi Mail:</th>
                            <th>Sil</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            test += 1;

                            <tr>
                                <td>@test</td>
                                <td>@x.NameSurname</td>
                                <td>@x.Mail</td>
                                <td><a href="/Admin/VisitorApi/DeleteVisitor/@x.VisitorId/" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/VisitorApi/VisitorDetails/@x.VisitorId/" class="btn btn-warning">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-success">Ziyaretçi Ekle</a>
    </div>
</div>


