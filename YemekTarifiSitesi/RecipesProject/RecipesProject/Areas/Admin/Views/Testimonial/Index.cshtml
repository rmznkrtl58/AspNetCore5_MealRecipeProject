@model List<TestimonialListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslarımız:</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim: </th>
                            <th> Ad Soyad: </th>
                            <th> Meslek: </th>
                            <th> Sil </th>
                            <th> Detaylar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@x.Image" alt="image" />
                                </td>
                                <td> @x.NameSurname</td>
                                <td> @x.Status </td>
                                <td> <a href="/Admin/Testimonial/DeleteTestimonial/@x.TestimonialId" class="btn btn-danger">Sil</a> </td>
                                <td> <a href="/Admin/Testimonial/EditTestimonial/@x.TestimonialId" class="btn btn-warning">Detaylar</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/Testimonial/AddTestimonial/" class="btn btn-success">Referans Ekle</a>
    </div>
</div>


