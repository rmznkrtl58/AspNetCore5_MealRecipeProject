@model UpdateTestimonialDTO
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
               @Html.HiddenFor(x=>x.TestimonialId)
                <div class="form-group">
                    <label for="exampleInputName1">Referans Adı Soyadı:</label>
                    <input type="text" asp-for="NameSurname" class="form-control" id="exampleInputName1" placeholder="Referansın Adını Soyadını Giriniz...">
                    <span asp-validation-for="NameSurname"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Referans Meslek:</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", @rows = 5, @placeholder = "Referansın Mesleğini Giriniz..." })
                    <span asp-validation-for="Status"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Referansın Mesajı:</label>
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @rows = 5, @placeholder = "Referansın Mesajını Giriniz..." })
                    <span asp-validation-for="Message"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Referans Resmi Seçiniz:</label>
                    <input type="file" class="form-control" asp-for="ImageFile" />
                </div>
                <button class="btn btn-primary me-2">Kaydet</button>
                <button class="btn btn-dark">İptal Et</button>
            </form>
        </div>
    </div>
</div>





