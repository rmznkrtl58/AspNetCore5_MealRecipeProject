@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcılar:</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim: </th>
                            <th> Adı Soyadı: </th>
                            <th> Kullanıcı Adı: </th>
                            <th> Rol Ata </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@x.ProfileImage" alt="image" />
                                </td>
                                <td> @x.Name @x.Surname</td>
                                <td> @x.UserName </td>
                                <td> <a href="/Admin/AssignRole/AssignUserRole/@x.Id" class="btn btn-primary">Rol Ata</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





