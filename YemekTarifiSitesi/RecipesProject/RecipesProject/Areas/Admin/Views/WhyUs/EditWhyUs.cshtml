@model WhyUsUpdateDTO
@{
    ViewData["Title"] = "EditWhyUs";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Biz Kimiz?</h4>
            <p class="card-description"> Biz Kimiz Alanını Düzenleme Sayfası </p>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.WhyUsId)
                <div class="form-group">
                    <label for="exampleInputName1">Ana Başlık:</label>
                    <input type="text" asp-for="MainHeader" class="form-control" id="exampleInputName1" placeholder="Ana Başlığı Giriniz...">
                    <span asp-validation-for="MainHeader"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama:</label>
                    @Html.TextAreaFor(x=>x.Description,new{@class="form-control",@rows=5,@placeholder="Açıklamayı Giriniz..."})
                    <span asp-validation-for="Description"></span>
                </div>
                <button class="btn btn-primary me-2">Güncelle</button>
                <button class="btn btn-dark">İptal Et</button>
            </form>
        </div>
    </div>
</div>

