@model List<WhyUsListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int test = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Biz Kimiz?</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>1.Madde</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model )
                        {
                            
                                test += 1;
                          
                            <tr>
                            <td>@test</td>
                            <td>@x.MainHeader</td>
                            <td><a href="/Admin/WhyUs/EditWhyUs/@x.WhyUsId/" class="btn btn-warning">Detaylar</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/WhyUs/AddWhyUs/" class="btn btn-success">Ekle</a>
    </div>
</div>


