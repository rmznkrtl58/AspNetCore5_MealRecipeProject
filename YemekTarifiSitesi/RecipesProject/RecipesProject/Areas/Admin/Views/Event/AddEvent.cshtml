@model InsertEventDTO
@{
    ViewData["Title"] = "AddEvent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Etkinlik Ekleme Sayfası:</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Ana Başlık:</label>
                    <input type="text" asp-for="MainHeader" class="form-control" id="exampleInputName1" placeholder="Ana Başlığı Giriniz...">
                    <span asp-validation-for="MainHeader"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Etkinliğin Fiyatı:</label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @rows = 5, @placeholder = "Fiyat Giriniz..." })
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kısa Açıklama:</label>
                    @Html.TextAreaFor(x => x.SubDescription, new { @class = "form-control", @rows = 5, @placeholder = "Kısa Açıklamayı Giriniz..." })
                    <span asp-validation-for="SubDescription"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Madde 1:</label>
                    @Html.TextAreaFor(x => x.Item1, new { @class = "form-control", @rows = 5, @placeholder = "1.Maddeyi Giriniz..." })
                    <span asp-validation-for="Item1"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Madde 2:</label>
                    @Html.TextAreaFor(x => x.Item2, new { @class = "form-control", @rows = 5, @placeholder = "2.Maddeyi Giriniz..." })
                    <span asp-validation-for="Item2"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Madde 3:</label>
                    @Html.TextAreaFor(x => x.Item3, new { @class = "form-control", @rows = 5, @placeholder = "3.Maddeyi Giriniz..." })
                    <span asp-validation-for="Item3"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Etkinlik Resmi Seçiniz...</label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                </div>
                <button class="btn btn-primary me-2">Kaydet</button>
                <button class="btn btn-dark">İptal Et</button>
            </form>
        </div>
    </div>
</div>

