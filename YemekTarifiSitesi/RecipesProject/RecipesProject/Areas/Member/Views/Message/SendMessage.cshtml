@using DTOLayer.DTOs.MessageDTOs
@model SendMessageDTO
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Member/Views/Shared/_memberlayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Gönderme Paneli:</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label style="color:red;font-weight:bold" for="exampleInputName1">Alıcı Seçiniz...</label>
                    @Html.DropDownListFor(x => x.ReceiverId, (IEnumerable<SelectListItem>)ViewBag.du, new { @class = "form-control" })
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red;font-weight:bold" for="exampleInputEmail3">Konu:</label>
                    <input type="text" asp-for="Subject" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red;font-weight:bold" for="exampleInputEmail3">Mesajınız:</label>
                    <textarea asp-for="Content" class="form-control" rows="7"></textarea>
                </div>
                <button style="margin-top:8px" class="btn btn-success me-2">Gönder</button>
            </form>
        </div>
    </div>
</div>


