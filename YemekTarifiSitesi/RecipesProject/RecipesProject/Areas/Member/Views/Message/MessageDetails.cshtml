@using DTOLayer.DTOs.MessageDTOs
@model MessageDetailsDTO
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Areas/Member/Views/Shared/_memberlayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajın İçeriği:</h4>
            <form class="forms-sample" method="post">
                <div class="form-group" >
                    <label style="font-weight:bold">Gönderenin Maili:</label>
                    <input type="text" disabled asp-for="SenderUser.Email" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="font-weight:bold" for="exampleInputEmail3">Konu:</label>
                    <input type="text" disabled asp-for="Subject" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="font-weight:bold"  for="exampleInputEmail3">Mesaj:</label>
                    <textarea disabled asp-for="Content" class="form-control"></textarea>
                </div>
                <a style="margin-top:7px" href="/Member/Message/ReceiverMessageDetails/@Model.MessageId" class="btn btn-danger">Mesajı Sil</a>
            </form>
        </div>
    </div>
</div>

