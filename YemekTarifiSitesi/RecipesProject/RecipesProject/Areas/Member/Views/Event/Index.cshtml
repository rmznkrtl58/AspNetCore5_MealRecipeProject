@model List<EventListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_memberlayout.cshtml";
    int number = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Etkinlikler:</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Ana Başlık: </th>
                            <th> Ödül: </th>
                            <th> Tarih: </th>
                            <th>  İçerik: </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            number += 1;
                            <tr>
                                <td>@number</td>
                                <td> @x.MainHeader</td>
                                <td> @x.Price</td>
                                <td> @Convert.ToDateTime(x.EventDate).ToString("dd/MM/yyyy")</td>
                                <td> <a href="/Member/Event/EventDetails/@x.EventId" class="btn btn-warning">İçerik</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




