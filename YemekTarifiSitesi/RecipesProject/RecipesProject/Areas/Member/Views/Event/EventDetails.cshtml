@model UpdateEventDTO 
@{
    ViewData["Title"] = "EventDetails";
    Layout = "~/Areas/Member/Views/Shared/_memberlayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Etkinlik İçeriği:</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group" style="margin-top:13px">
                    <img src="@Model.Image" style="width:300px;height:200px;margin-bottom:20px" />
                </div>
                <div class="form-group" >
                    <label style="color:red" for="exampleInputName1">Ana Başlık:</label>
                    <input disabled type="text" asp-for="MainHeader" class="form-control" id="exampleInputName1" placeholder="Ana Başlığı Giriniz...">
                    <span asp-validation-for="MainHeader"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label  style="color:red" for="exampleInputEmail3">Etkinliğin Fiyatı:</label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @rows = 5, @placeholder = "Fiyat Giriniz...", @disabled="" })
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red" for="exampleInputEmail3">Kısa Açıklama:</label>
                    @Html.TextBoxFor(x => x.SubDescription, new { @class = "form-control", @rows = 5, @placeholder = "Kısa Açıklamayı Giriniz...", @disabled = "" })
                    <span asp-validation-for="SubDescription"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red" for="exampleInputEmail3">Madde 1:</label>
                    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control", @rows = 5, @placeholder = "1.Maddeyi Giriniz...", @disabled = "" })
                    <span asp-validation-for="Item1"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red" for="exampleInputEmail3">Madde 2:</label>
                    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control", @rows = 5, @placeholder = "2.Maddeyi Giriniz...", @disabled = "" })
                    <span asp-validation-for="Item2"></span>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <label style="color:red" for="exampleInputEmail3">Madde 3:</label>
                    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control", @rows = 5, @placeholder = "3.Maddeyi Giriniz...", @disabled = "" })
                    <span asp-validation-for="Item3"></span>
                </div>
            </form>
        </div>
    </div>
</div>