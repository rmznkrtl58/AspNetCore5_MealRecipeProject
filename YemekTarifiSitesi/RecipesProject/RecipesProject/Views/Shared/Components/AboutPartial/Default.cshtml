 @model List<AboutListDto>
<section id="about" class="about section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @foreach(var x in Model){
        <div class="row gy-4">
            <div class="col-lg-6 order-1 order-lg-2">
                <img src="@x.Image" class="img-fluid about-img" alt="">
            </div>
            <div class="col-lg-6 order-2 order-lg-1 content">
                <h3>@x.TopHeader</h3>
                <p class="fst-italic">
                   @x.SubHeader
                </p>
                <ul>
                    <li><i class="bi bi-check2-all"></i> <span>@x.Item1</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@x.Item2</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@x.Item3</span></li>
                </ul>
                <p>
                    @x.Description
                </p>
            </div>
        </div>
        }
    </div>

</section>